tags: $:/tags/Stylesheet

.o-rnav {
  text-align: right;
  margin-top: 6px;
  text-transform: uppercase;
}

.o-rnav:hover {
  <!-- text-decoration: underline; -->
  font-weight: bold;
}

.o-random-tip .tc-modal,
.o-random-tip .tc-modal-header,
.o-random-tip .tc-modal-body,
.o-random-tip .tc-modal-footer {
   border-radius: 5px;
   border: none;
   background-color: #F5F5F5;
}

.o-random-tip .tc-modal-footer {
    display:none;
}

.o-random-right {
    text-align: right;
}

.o-random-tip blockquote {
	border: none;
	background-color: whitesmoke;
	padding: 5px 10px;
	border-radius: 5px;
}

.o-random-tip blockquote:hover {
    transform: scale(0.99);
    background-color: aliceblue !important;
    transition: transform .2s;
}

.o-random-tip .tc-modal-header {
    text-transform: capitalize;
  }
