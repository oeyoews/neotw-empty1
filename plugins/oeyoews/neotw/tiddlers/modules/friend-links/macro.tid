tags: $:/tags/Macro
title: $:/plugins/oeyoews/neotw/modules/friend/macro

<!-- copyed from https://pimgeek.com/notes/ -->
\whitespace trim
\define friend-card(title desc img link)
<a class="no-underline text-blue-400" href="$link$" rel="noopener noreferrer" target="_blank">
  <div class="friend-card" style="background: url('$img$')">
    <div class="p-0.5 text-base font-medium">$title$</div>
    <div class="text-xs p-0.5 text-green-500">$desc$</div>
  </div>
</a>
\end
